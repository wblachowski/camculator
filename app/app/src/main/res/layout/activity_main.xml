<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.github.wblachowski.camculator.view.Viewport
        android:id="@+id/viewport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7f000000" />

    <RelativeLayout
        android:id="@+id/frameWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/framePreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:contentDescription="@string/preview_description" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/framePreview"
            android:layout_marginBottom="92dp"
            android:layout_marginTop="8dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/resultsView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/equationsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Equations"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                        <android.support.v4.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp">

                            <io.github.kexanie.library.MathView
                                android:id="@+id/equationsView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                auto:engine="KaTeX"
                                auto:text="\\(\\color{white}{\\begin{cases}1\\\\2\\\\3\\end{cases}}\\)" />
                        </android.support.v4.widget.NestedScrollView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/solutionsView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Solutions"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/solutionsHolder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/touchPaneView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center">

        <ImageButton
            android:id="@+id/cameraTriggerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#00000000"
            android:src="@drawable/ic_camera_trigger" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shutterEffectView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="invisible" />
</FrameLayout>